RewriteEngine on

RewriteBase /

#RewriteCond %{REQUEST_FILENAME} !-f
#RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*) Pitaya/portal.php?__src_request=$1 [QSA,L]

<FilesMatch "\.(inc)$">
	Order allow,deny
	Deny from all
	Satisfy All
</FilesMatch>
<FilesMatch "\.(sh)$">
	Order allow,deny
	Deny from all
	Satisfy All
</FilesMatch>

php_flag register_argc_argv On
php_flag magic_quotes_gpc Off
php_value auto_prepend_file kernel/base.php
